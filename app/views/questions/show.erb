<img src="../imgs/<%= @question.schema_img_filename %>" alt="Schema for Theaters, Screens, and Screenings">


<% if @last_guess and @last_guess[1] == true %>
<p>That's correct!</p>
<% elsif @last_guess %>
<p>Incorrect!</p>
<% end %>

<p><%= @question.text %></p>

<div id="editor">function foo(items) {
    var x = "All this is syntax highlighted";
    return x;
}</div>

<form action="/questions/<%= @question.id %>/guess" method="post">
  <textarea name="answer" id="" cols="30" rows="10"><% if @last_guess %><%= @last_guess[2] %><% end %></textarea>
  <input type="submit">
</form>

<script src="/ace-builds/src-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
<script>
    var editor = ace.edit("editor");
    editor.setTheme("ace/theme/monokai");
    editor.getSession().setMode("ace/mode/javascript");
</script>
